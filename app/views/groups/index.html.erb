<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<table>
  <thead>
    <tr>
      <th>Icon</th>
      <th>Name</th>
      <th>Description</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= image_tag(group.icon) %></td>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td><%= group.created_at %></td>
        <td><%= link_to 'Show', group %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= button_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

      <div class="card flex-row m-0 mb-3 ">
        <%= link_to group, class: "col-11 d-flex flex-row" do %>
          <div class="col-2 p-2 border-end"><%= image_tag(group.icon) %></div>
          <div class="card-body">
            <h5 class="card-title"><%= group.name %></h5>
            <p class="card-text m-0">
              <%= group.description %>
            </p>
            <!--            strftime("%Y-%m-%d %I:%M %p")-->
            <span class="badge rounded-pill bg-info badge-font">Created At# <%= group.created_at.strftime("%d-%m-%Y") %></span>
            <span class="badge rounded-pill bg-warning text-dark badge-font">Updated At# <%= group.updated_at.strftime("%d-%m-%Y") %></span>
          </div>
        <% end %>
        <div class="col-1">
          <%= link_to edit_group_path(group), class: 'btn btn-primary p-1 h-50 w-100' do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= button_to group, method: :delete, class: 'btn btn-danger p-1 h-50 w-100', data: { confirm: 'Are you sure?' } do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </tbody>
</table>

