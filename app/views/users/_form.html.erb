<div class='signup'>
<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="form-outline field">
    <%= form.text_field :name,
                        autofocus: true,
                        required: true,
                        type: 'name',
                        class: "form-control string required py-2 my-3",
                        placeholder: "Name",
                        label: true%>
  </div>

  <div class="form-outline field">
    <%= form.text_field :username,
                        required: true,
                        type: 'username',
                        class: "form-control string required py-2 my-3",
                        placeholder: "Username",
                        label: true%>
  </div>

  <div class="form-actions d-grid gap-2 actions">
    <% if request.fullpath.include?('signup') %>
      <%= form.submit 'Sign Up', class: "btn btn-primary py-3 text-light mb-2 shadow-0" %>
    <% else %>
      <%= form.submit 'Update', class: "btn btn-primary py-3 text-light mb-2 shadow-0" %>
    <% end %>
  </div>

<% end %>
</div>