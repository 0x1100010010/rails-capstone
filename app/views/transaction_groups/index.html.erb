<p id="notice"><%= notice %></p>

<h1>Transaction Groups</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Transaction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_groups.each do |transaction_group| %>
      <tr>
        <td><%= transaction_group.group_id %></td>
        <td><%= transaction_group.transaction_id %></td>
        <td><%= link_to 'Show', transaction_group %></td>
        <td><%= link_to 'Edit', edit_transaction_group_path(transaction_group) %></td>
        <td><%= button_to 'Destroy', transaction_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction Group', new_transaction_group_path %>
